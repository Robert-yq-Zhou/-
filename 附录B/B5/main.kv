#:kivy 2.0.0
<ChineseLabel@Label>:
    font_name: 'fonts/SourceHanSerifSC-Regular.otf'
<MainScreen>:
    BoxLayout:
        orientation: 'vertical'
        padding: 30
        spacing: 20
        size_hint: (0.9, 0.9)
        pos_hint: {'center_x': 0.5, 'center_y': 0.5}

        # 四个按钮
        Button:
            text: '文件搜索'
            font_size: 20
            font_name: 'fonts/SourceHanSerifSC-Regular.otf'
            size_hint_y: None
            height: 100
            background_color: 0.3, 0.8, 0.5, 1
            on_press: app.root.current = 'file_search'

        Button:
            text: '数据可视化'
            font_size: 20
            font_name: 'fonts/SourceHanSerifSC-Regular.otf'
            size_hint_y: None
            height: 100
            background_color: 1, 0.8, 0.2, 1
            on_press: app.root.current = 'data_plot'

        Button:
            text: '数据分析'
            font_size: 20
            font_name: 'fonts/SourceHanSerifSC-Regular.otf'
            size_hint_y: None
            height: 100
            background_color: 0.9, 0.4, 0.6, 1
            on_press: app.root.current = 'data_analysis'

        Button:
            text: '退出程序'
            font_size: 20
            font_name: 'fonts/SourceHanSerifSC-Regular.otf'
            size_hint_y: None
            height: 100
            background_color: 0.8, 0.3, 0.3, 1
            on_press: app.stop()